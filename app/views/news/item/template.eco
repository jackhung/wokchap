
<div class='row'>
	<div class="col-md-1"><%= moment(@date).format("YYYY-MM-DD") %></div>
	<div class="col-md-1"><a href="news/author/<%= @author%>"><%= @author%></a></div>
	<div class="col-md-2"><a href="news/<%= @link %>"><%= @title%></a></div>
	<div class="col-md-8">
		<% for stk in @codes: %>
			<span class='stock-ref badge' ref='<%= stk %>'> <%= stk %> </span>
			<span class="glyphicon glyphicon-eye-open stock-tip" ref="<%= stk %>"></span>
		<% end %>
	</div>
</div> 
